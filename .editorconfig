root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,json,js,jsx,vue,ts}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[artisan]
indent_style = space
indent_size = 4
