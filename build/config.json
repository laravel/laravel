{
  "paths": {
    "src": "resources/assets",
    "dest": "public",
    "assets": "assets"
  },
  "config": {
    "browserSync": {
      "files": [
        "public/assets/css",
        "public/assets/js",
        "resources/views",
        "!**/*.map"
      ],
      "ghostMode": false,
      "notify": false,
      "open": false,
      "port": 5757,
      "proxy": "web:80",
      "snippetOptions": {
        "rule": {
          "match": "</body>"
        }
      },
      "ui": false
    },
    "css": {
      "files": [
        "app.scss",
        "error.scss"
      ],
      "autoprefixer": {
        "cascade": false
      },
      "cleanCss": {}
    },
    "js": {
      "files": [
        "app.js"
      ],
      "extract": [],
      "lint": true
    }
  }
}
